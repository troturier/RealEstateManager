<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:showDividers="middle"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fragment
        android:id="@+id/fragmentRealEstateList"
        android:name="com.openclassrooms.realestatemanager.controllers.fragments.RealEstateListFragment"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="40"
        tools:layout="@layout/fragment_real_estate_list" />

    <View android:background="@android:color/darker_gray"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        />

    <FrameLayout
        android:id="@+id/flDetailContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="60" />

</LinearLayout>